test cm-2.0 {Implement a DEC operation using instruction set 2} -setup {
    ::automata::CM create M -instructionset 2
} -body {
    M compile {
        _:  INC:1
        a:  JE:b,2,3
            INC:3
            JE:a,0,0
        b:  CLR:2
        c:  JE:z,1,3
            INC:1
            INC:2
            JE:c,0,0
        z:  NOP
    }
    # in a real program there would be cleanup
    M run {0 0 2 0}
} -cleanup {
    M destroy
    log::lvSuppressLE i 1
} -result {{0 2 1 2} 10}

cleanupTests ; return ; # ---------------------------------
