package require tcltest
namespace import ::tcltest::*

::tcltest::configure {*}$argv

::tcltest::loadTestedCommands

package require automata::machine

if no {
    set mc SM
    set m [subst {::automata::$mc create M}]
    {*}$m
    M doc [file join ~ code automata-as-tools.wiki class.$mc.md]
    M destroy
}

test sm-1.0 {Calculate 4 x (2 + 3)} -body {
    ::automata::SM create M {
        code {
            2 3 ADD 4 MUL
        }
    }
    M run {}
} -cleanup {
    M destroy
    log::lvSuppressLE i 1
} -result {20 5}

test sm-1.1 {print 1.0} -body {
    ::automata::SM create M {
        code {
            2 3 ADD 4 MUL
        }
    }
    M print
} -cleanup {
    M destroy
    log::lvSuppressLE i 1
} -output {Code
      PUSH  2      
      PUSH  3      
      ADD          
      PUSH  4      
      MUL          
Instantaneous description: stack, ipointer
}

test sm-2.0 {Implement a CLR operation} -body {
    ::automata::SM create M {
        code {
                    3
            a:      JZ:end
                    DEC
                    J:a
            end:    NOP
        }
    }
    M run {}
} -cleanup {
    M destroy
    log::lvSuppressLE i 1
} -result {0 5}

test sm-2.1 {Print 2.0} -body {
    ::automata::SM create M {
        code {
                    3
            a:      JZ:end
                    DEC
                    J:a
            end:    NOP
        }
    }
    M print
} -cleanup {
    M destroy
    log::lvSuppressLE i 1
} -output {Code
      PUSH  3      
a     JZ    end    
      DEC          
      J     a      
end   NOP          
Instantaneous description: stack, ipointer
}

if {[package vcompare [package present automata::machine] 0.4] > 0} { 
    cleanupTests ; return 
} 
 

cleanupTests ; return ; # ---------------------------------
