3     1     4     PUSH 4
4     0     5     MUL {}
4     1     5     MUL {}
5     0     6     HALT {}
5     1     6     HALT {}
}

test sm-2.0 {Implement a CLR operation} -setup {
    ::automata::SM create M
} -body {
    M compile {
            PUSH:3
    a:      JZ:end
            DEC
            J:a
    end:    HALT
    }
    M run {}
} -cleanup {
    M destroy
    log::lvSuppressLE i 1
} -result {0 4}

